<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:FX.Recursos"
             x:Class="FX.Recursos.MainPage">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <Label FontSize="20" Text="Controles Básicos"></Label>
                <Button x:Name="btnEditor" Text="Editor" Clicked="btnEditor_Clicked"></Button>
                <Button x:Name="btnListPickerView" Text="List Picker" Clicked="btnListPickerView_Clicked"></Button>
                <Button x:Name="btnPickerView" Text="Datas" Clicked="btnPickerView_Clicked"></Button>
                <Button x:Name="btnProgresso" Text="Progresso" Clicked="btnProgresso_Clicked"></Button>
                <Button x:Name="btnStepper" Text="Stepper Control" Clicked="btnStepper_Clicked"></Button>                
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
    
</ContentPage>
